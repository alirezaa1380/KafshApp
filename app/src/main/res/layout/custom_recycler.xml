<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_image_post"
        android:layout_width="@dimen/_125mdp"
        android:layout_height="@dimen/_100mdp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_8mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_8mdp"
        android:layout_marginBottom="@dimen/_8mdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/nice" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:layout_toLeftOf="@id/imv_image_post"
        app:cardCornerRadius="@dimen/_5mdp"
        app:cardElevation="@dimen/_3mdp">

        <TextView
            android:id="@+id/txt_title_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ordibehesht"
            android:gravity="right"
            android:maxLines="3"
            android:padding="@dimen/_4mdp"
            android:text="کفش زنانه "
            android:textColor="#000000"
            android:textSize="@dimen/_12font_mdp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_4mdp"
            android:background="@drawable/back_item_app"
            android:fontFamily="@font/ordibehesht"
            android:padding="@dimen/_4mdp"
            android:text="اطلاعات بیشتر"
            android:textColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>