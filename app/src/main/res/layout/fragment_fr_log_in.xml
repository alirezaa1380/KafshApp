<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgerand_login"
    tools:context=".view.FrLogIn">


    <EditText
        android:id="@+id/edt_name_login"
        style="@style/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="نام کاربری"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edt_password_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_password_login"
        style="@style/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="رمز عبور"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_save_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16mdp"
        android:background="@drawable/back_button_login"
        android:fontFamily="@font/ordibehesht"
        android:gravity="center"
        android:text="ورود"
        android:textSize="@dimen/_16font_mdp"
        app:layout_constraintEnd_toEndOf="@+id/edt_password_login"
        app:layout_constraintStart_toStartOf="@+id/edt_password_login"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_login" />

    <TextView
        android:id="@+id/textView5"
        style="@style/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16mdp"
        android:text="اگر قبلا ثبت نام نکرده اید"
        app:layout_constraintStart_toStartOf="@+id/btn_save_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_login" />

    <TextView
        android:id="@+id/txt_btn_onclick"
        style="@style/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:paddingLeft="@dimen/_4mdp"
        android:paddingRight="@dimen/_4mdp"
        android:text="کلیک کنید"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>