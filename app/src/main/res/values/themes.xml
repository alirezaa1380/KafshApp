<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KafshApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="edt"  parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/back_button_login </item>
        <item name="android:layout_margin">@dimen/_32mdp</item>
        <item name="fontFamily">@font/ordibehesht</item>
        <item name="android:paddingRight">@dimen/_8mdp</item>
        <item name="android:paddingLeft">@dimen/_8mdp</item>
        <item name="android:elevation">@dimen/_8mdp</item>
        <item name="android:textCursorDrawable">@color/white</item>

    </style>




    <style name="txt" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ordibehesht</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/_14font_mdp</item>

    </style>


    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Please Wait</item>
        <item name="DialogSpotColor">@color/purple_500</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="txt2" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ordibehesht</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13font_mdp</item>
        <item name="android:layout_margin">@dimen/_4mdp</item>

    </style>


<style name="button_txt" parent="Widget.AppCompat.TextView">
    <item name="android:background">@drawable/back_item_app</item>
    <item name="android:layout_gravity">center|left</item>
    <item name="fontFamily">@font/ordibehesht</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:padding">@dimen/_4mdp</item>
    <item name="android:layout_marginLeft">@dimen/_4mdp</item>
    <item name="android:layout_width">@dimen/_50mdp</item>
    <item name="android:gravity">center</item>
</style>


</resources>